<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />  <!-- white background, pwede palitan -->

    <!-- Rounded corners radius -->
    <corners android:radius="16dp" />

    <!-- Optional: shadow or stroke -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />  <!-- light gray border -->

    <!-- Optional padding inside -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
