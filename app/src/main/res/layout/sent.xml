<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <!-- Background for the message bubble -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <!-- TextView for sent text message -->
        <TextView
            android:id="@+id/txt_sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is sent message"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- ImageView for sent image message -->
        <ImageView
            android:id="@+id/img_sent_message"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/txt_sent_message"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
