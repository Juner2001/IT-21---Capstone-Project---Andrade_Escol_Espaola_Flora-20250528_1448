<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Points & Hours Info -->
        <TextView
            android:id="@+id/rewardPointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points: 0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/totalHoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Hours: 0"
            android:textSize="18sp"
            android:textColor="#37474F"
            android:layout_marginBottom="24dp" />

        <!-- Daily Reward Button -->
        <Button
            android:id="@+id/dailyRewardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎁 Claim Daily 50 Points"
            android:backgroundTint="#66BB6A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Watch Ad Button -->
        <Button
            android:id="@+id/watchAdButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶️ Watch Ad (Earn 100 Points)"
            android:backgroundTint="#42A5F5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Redeem Section Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎫 Redeem Options"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Redeem 1 Hour -->
        <Button
            android:id="@+id/redeem100Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redeem 100 Points ➜ 1 Hour Access"
            android:backgroundTint="#FFA726"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Redeem 2 Hours -->
        <Button
            android:id="@+id/redeem200Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redeem 200 Points ➜ 2 Hours Access"
            android:backgroundTint="#FB8C00"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>
