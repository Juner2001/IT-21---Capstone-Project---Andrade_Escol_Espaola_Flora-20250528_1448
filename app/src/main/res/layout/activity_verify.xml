<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header Icon -->
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_email_24"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp"
            app:tint="@android:color/white" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Email"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.05"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check your inbox for a verification link."
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Card Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="48dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Info Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weâ€™ve sent an email to your address. Tap the link in your inbox to verify your account."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Proceed to Login -->
                <Button
                    android:id="@+id/sigBtn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Proceed to Login"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black"
                    android:elevation="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
